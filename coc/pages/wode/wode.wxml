<!--pages/mine/mine.wxml-->
<view class="center">
  <view class="top">
    <view wx:if="{{hasUserInfo}}">
      <image class="head_img touxiang" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view wx:else class="head_img"></view>
    <view class="login" bindtap="getUserProfile">登录</view>
  </view>
  <view class="bottom">
    <view class="cell">
      <view class="icon help"></view><text>帮助中心</text>
      <view class="black_arrow"></view>
    </view>
    <view class="cell">
      <view class="icon set"></view><text>设置</text>
      <view class="black_arrow"></view>
    </view>
  </view>
</view>