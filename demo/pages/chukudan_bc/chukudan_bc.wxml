<!--pages/chukudan_bc/chukudan_bc.wxml-->
<view class="chukudan_bc">
  <!-- 顶部分享 -->
  <view class="top">
    <view class="share">
      <image class="share_icon" src="{{share_icon}}"></image>
      <text class="share_text">分享</text>
    </view>
  </view>
  <!-- 中间内容 -->
  <view class="content">
    <!-- 客户 -->
    <view class="chunk">
      <view class="kehu_row">
        <view class="kehu_row1">
          <image class="icon_left" src="{{left_icon}}"></image>
          <text class="text1">客户</text>
        </view>
        <view class="kehu_row2">
          <text class="text2">张三</text>
          <image class="icon_arrow" src="{{arrow_icon}}"></image>
        </view>
      </view>
      <!-- 已选货品卡片 -->
      <view wx:for="12" class="yixuan_card" wx:key="this">
        <view class="yixuan_hp">
          <view class="one">
            <view class="left">
              <image class="img" src="http://47.117.121.44:3000/images/goods.png"></image>
              <view class="yixuan_cs">
                <text>货品名称: 干物妹</text><text>\n</text>
                <text>货品编号: 123456789</text>
              </view>
            </view>
            <view class="right">
              <view class="yixuan_sl">出: 1</view>
            </view>
          </view>
          <view class="two">
            <text class="yixuan_dx">M码</text>
            <text class="yixuan_jg">价格: 50.00</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 货品合计 -->
    <view class="chunk">
      <view class="kehu_row">
        <view class="kehu_row1">
          <image class="icon_left" src="{{left_icon}}"></image>
          <text class="text1">货品合计</text>
        </view>
        <view class="kehu_row2">
          <text class="text_right">100.00元</text>
        </view>
      </view>
      <!-- 货品第二行分布 -->
      <view class="kehu_row">
        <view class="kehu_row1">
          <text class="text_left">开单人</text>
        </view>
        <view class="kehu_row2">
          <text class="text_right">李思</text>
        </view>
      </view>
      <!-- 货品第三行分布 -->
      <view class="kehu_row">
        <view class="kehu_row1">
          <text class="text_left">开单日期</text>
        </view>
        <view class="kehu_row2">
          <text class="text_right">2021-06-08</text>
        </view>
      </view>
    </view>

    <!-- 备注 -->
    <view class="chunk">
      <view class="beizhu_row">
        <image class="icon_left" src="{{left_icon}}"></image>
        <text class="text1">备注</text>
      </view>
      <view class="beizhu_area">
        <textarea class="weui-textarea" placeholder="请输入" style="height: 100px" maxlength="50" />
      </view>
    </view>
  </view>
  <!-- 打印出库单 -->
  <view class="dy_btn_css">打印出库单</view>
  <!-- 修改 复制 删除 -->
  <view class="xg_fz_sc">
    <view class="bottom_row">
      <view class="xg_fz_sc_row">
        <view class="xg">
          修改
        </view>
      </view>
      <view class="xg_fz_sc_row">
        <view class="fz">
          复制
        </view>
      </view>
      <view class="xg_fz_sc_row">
        <view class="sc">
          删除
        </view>
      </view>
    </view>

  </view>
</view>