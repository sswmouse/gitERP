<view class="container">
  <view class="weui-cells weui-cells_after-title">
    <view class="disflex">
      <view class="weui-cell weui-cell_input flexinput bgg">
        <icon class="icon-small" type="search" size="20"></icon>
        <input class="weui-input" bindinput="sel_kehu" auto-focus placeholder="请输入客户姓名/手机号" />
      </view>
      <view class="nndiv"></view>
      <navigator class="flexsx " url="/pages/new_kehu/new_kehu">
        <view class="bgcy lh btndiv">添加客户</view>
      </navigator>
    </view>
  </view>
  <view class="lh red">共计客户数量{{kehu_li.length}}人</view>

  <view>
    <view wx:for="{{kehu_li}}" wx:key="*this" class="display_flex myrowbb pad1">
      <view bindtap="ch_peo" data-peo="{{item}}" class="flexinput">
        <view class="hh">{{item.kehu_name}}</view>
        <view>
          <span class="grey">手机号：</span>
          <span class="yellow">{{item.kehu_tel}} </span>
          <span>一键拨打</span>
        </view>
        <view class="grey">店铺地址：{{item.kehu_house}}</view>
      </view>
      <view class="flexone">
        <button class="mini-btn warn" bindtap="dele" data-id="{{item.kehu_id}}" size="mini">删除</button>
      </view>
    </view>
    
  </view>

</view>