<view class="mine">
  <!-- 信息卡片 -->
  <view class="mine_card">
    <view class="my">
      <view class="my_flex1">
        <image class="head" src="{{head_img}}"></image>
      </view>
      <view class="my_flex2">
        <view wx:if="{{ssss}}">
        <text class="name">小库先生</text>
          <view class="role">超级管理员</view>
          <text class="info">18164887900</text>
          <text class="info">上海市A动漫门店</text>
        </view>
      </view>
      <view class="my_flex3">
        <view wx:if="{{ssss}}" class="login">退出登录</view>
        <view class="login" bindtap="getUserProfile">登录</view>
      </view>
    </view>
  </view>
  <!-- 信息卡片下方功能 -->
  <view class="function">
    <!-- 帮助中心功能 -->
    <view class="one">

      <view class="fn">
        <view class="fn1">
          <image class="icon" src="{{help_icon}}"></image>
          <text class="icon_text">帮助中心</text>
        </view>
        <view class="fn2">
          <image class="set_icon" src="{{arrow_icon}}"></image>
        </view>
      </view>
      <!-- 关于我们功能 -->
      <view class="fn">
        <view class="fn1">
          <image class="icon" src="{{gywm_icon}}"></image>
          <text class="icon_text">关于我们</text>
        </view>
        <view class="fn2">
          <image class="set_icon" src="{{arrow_icon}}"></image>
        </view>
      </view>
      <!-- 设置功能 -->
      <view class="fn">
        <view class="fn1">
          <image class="icon" src="{{set_icon}}"></image>
          <text class="icon_text">设置</text>
        </view>
        <view class="fn2">
          <image class="set_icon" src="{{arrow_icon}}"></image>
        </view>
      </view>
    </view>
  </view>


