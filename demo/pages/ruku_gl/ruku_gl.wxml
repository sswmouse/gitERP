<view class="coverdiv">
  <view class="container bggg">
    <view class="weui-form formondiv">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells__title">货品入库信息</view>
        <view class="weui-cells weui-cells_form">

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">入库货品编号</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品编号"
               placeholder-class="weui-input__placeholder" bindinput='ch_id'/>
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">入库货品名称</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品名称"
               placeholder-class="weui-input__placeholder" bindinput='ch_nm'/>
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">货品类别</label>
            </view>
            <view class="weui-cell__bd">
              <view bindtap="treeyetab">
                <span class="weui-input__placeholder">请选择货品类别{{treeye}}</span>
                <image wx:if="{{treeye==0}}" class="treeye" src="/images/upper.png"></image>
                <image wx:if="{{treeye==1}}" class="treeye2" src="/images/down_triangle.png"></image>
              </view>

            </view>
          </view>

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">货品数量</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品数量" 
              placeholder-class="weui-input__placeholder" bindinput='ch_num'/>
            </view>
          </view>

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">货品颜色</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品颜色"
               placeholder-class="weui-input__placeholder" bindinput='ch_clour'/>
            </view>
          </view>

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">货品尺码</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品尺码"
               placeholder-class="weui-input__placeholder" bindinput='ch_size'/>
            </view>
          </view>

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">货品价格</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请填写入库货品价格"
               placeholder-class="weui-input__placeholder" bindinput='ch_money'/>
            </view>
          </view>

          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">上架时间</label>
            </view>
            <view class="weui-cell__bd">
              <picker mode="date" value="{{date}}" start="2015-01-01" end="2030-12-31" bindchange="bindDateChange">
                <text class="weui-input__placeholder">{{uptime}}</text>
              </picker>
            </view>
          </view>

          <view class="weui-cell weui-cell_active blk">
            <view class="weui-cell__hd">
              <label class="weui-label">上架货品</label>
            </view>
            <view>
              <wux-upload listType="picture-card" fileList="{{ fileList }}" controlled
                url="https://www.skyvow.cn/api/common/file" bind:change="onChange" bind:success="onSuccess"
                bind:complete="onComplete" bind:preview="onPreview" bind:remove="onRemove">
                <text>+</text>
              </wux-upload>
            </view>
          </view>

          <view class="weui-cells__title">其他信息</view>
          <view class="weui-cells weui-cells_form">
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">供货商姓名</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="供货商姓名"
                 placeholder-class="weui-input__placeholder" bindinput='ch_gong_nm'/>
              </view>
            </view>

            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">供货商手机号</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="供货商手机号"
                 placeholder-class="weui-input__placeholder" bindinput='ch_gong_tel'/>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
