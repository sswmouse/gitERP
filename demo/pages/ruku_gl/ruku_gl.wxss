/* pages/index/newrklist.wxss */

/* 最外层大div */
.coverdiv {
  width: 100%;
  height: 100vh;
}

/* 货品类别展开按钮样式1 */
.treeye {
  height: 10px;
  width: 10px;
  align-content: center;
}
/* 货品类别展开按钮样式2 */
.treeye2 {
  height: 6px;
  width: 10px;
  align-content: center;
}
/* 第二层大div */
.container {
  height: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  overflow: scroll;
}
/* 表单样式 */
.formondiv {
  border-radius: 10px;
}

/* 滚动条隐藏 */
.container::-webkit-scrollbar {
  display: none;
}

/* 滤镜 */
.bggg {
  background-color: rgba(0, 0, 0, 0.05);
}
/* 三大模块标题样式 */
.weui-cells__title {
  font-size: 15px;
  font-weight:normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #040404;
  border-left: 3px solid #fccc04;
}

/* 输入框左侧描述 */
.weui-cells__group_form .weui-label {
  /* 最大宽度清除 */
  max-width: none;
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #494848;
}
/* 顶部距离 */
view .weui-form {
  padding: calc(10px + env(safe-area-inset-top)) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left);
}
/* 输入框样式 */
.weui-input {
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #494848;
}
/* 指定 placeholder 的样式类 */
.weui-input__placeholder {
  font-size: 12px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #8f8f8f;
}
/* 保存按钮样式 */
.zz_sub {
  width: 90%;
  height: 40px;
  display: inline-block;
  margin-left:5%;
  line-height: 40px;
  text-align: center;
  background-color: #fccc04;
  border-radius: 8px;
  font-size: 18px;
  color: #040404;
  position: fixed;
  bottom: 2%;
}

/* 图标排列样式 */
view .blk {
  display: block;
}

/* 商品分类基础样式 */
.classList {
  float: left;
  border: 1px solid #d5d5d5;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  color: #d5d5d5;
  border-radius: 3px;
  padding: 2px 4px 2px 4px;
}
/* 商品分类选中样式 */
.is_classList {
  float: left;
  border: 1px solid #fccc04;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  color: black;
  border-radius: 3px;
  padding: 2px 4px 2px 4px;
  background-color: #fccc04;
}

/* 商品分类栏样式 */
.classify {
  overflow: hidden;
  padding: 16px 32px;
}