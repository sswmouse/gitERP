.treeye{
  height: 10px;
  width: 10px;
  align-content: center;
}

.treeye2{
  height: 6px;
  width: 10px;
  align-content: center;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.coverdiv{
  /* position: absolute; */
  width: 100%;
}

.formondiv{
  height: 85vh;
  overflow: auto;
  border-radius: 10px;
}

.bggg{
  background-color: rgba(0, 0, 0, 0.05);
}

.cc{
  width: 100%;
  height: 100%;
}

.weui-cells__title{
  font-size: 15px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #040404;
}

.weui-cells__group_form .weui-label{
  /* 最大宽度清除 */
  max-width:none;
  font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #494848;
}

view .weui-form{
  padding: calc(10px + env(safe-area-inset-top)) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left);
}

.weui-input{
  font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #494848;
}

.weui-input__placeholder{
  font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #8f8f8f;
}

.zz_sub{
  width: 90%;
  height: 40px;
  margin: auto;
  line-height: 40px;
  text-align: center;
  background-color: #fccc04;
  border-radius: 8px;
  font-size: 18px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #040404;
}

view .blk{
  display: block;
}

.classList{
  float: left;
  border: 1px solid #d5d5d5;
  margin-right:10px;
  margin-bottom:10px;
  font-size: 12px;
  color: #d5d5d5;
  border-radius:3px;
  padding: 2px 4px 2px 4px;
}
.classify{
  overflow: hidden;
  padding: 16px 32px;
}
